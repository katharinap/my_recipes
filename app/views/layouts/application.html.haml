!!! 5
%html(lang='en')
  %head
    %meta(charset='utf-8')
    %title= content_for?(:title) ? yield(:title) : 'My Recipes'
    = csrf_meta_tags
    = action_cable_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
  %body
    #content.container-fluid
      %nav.navbar
        %ul.nav.navbar-nav
          %li.nav-item
            = link_to root_path, class: 'nav-link' do
              = glyph 'home'
        %ul.nav.navbar-nav.pull-right
          %li.nav-item.dropdown
            - if user_signed_in?
              = link_to '#', class: 'nav-link dropdown-toggle', data: { toggle: 'dropdown' }, role: 'button', aria: { haspopup: true, expanded: false } do
                = glyph 'user'
                = current_user.name || current_user.email
              .dropdown-menu
                = link_to edit_user_registration_path(current_user), class: 'dropdown-item' do
                  = glyph 'cog'
                  Account
                = link_to destroy_user_session_path, :method => :delete, class: 'dropdown-item' do
                  = glyph 'sign-out'
                  Sign Out
            - else
              = link_to '#', class: 'nav-link dropdown-toggle', data: { toggle: 'dropdown' }, role: 'button', aria: { haspopup: true, expanded: false } do
                = glyph 'user'
              .dropdown-menu
                = link_to new_user_session_path, class: 'dropdown-item' do
                  = glyph 'sign-in'
                  Sign In
                = link_to user_registration_path, class: 'dropdown-item' do
                  = glyph 'user-plus'
                  Sign Up
      .row
        .col-lg-12
          = bootstrap_flash
      = yield
