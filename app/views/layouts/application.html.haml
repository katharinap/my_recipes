!!! 5
%html(lang='en')
  %head
    %meta(charset='utf-8')
    %title= content_for?(:title) ? yield(:title) : 'My Recipes'
    = csrf_meta_tags
    = action_cable_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
  %body
    #content.container-fluid
      %nav
        %ul.nav
          %li.nav-item.dropdown
            = link_to '#', class: 'nav-link', role: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false } do
              = glyph 'bars fa-2x'
            .dropdown-menu
              = link_to root_path, class: 'dropdown-item nav-link' do
                = glyph 'home'
                Home
              .dropdown-divider
              - if user_signed_in?
                = link_to edit_user_registration_path(current_user), class: 'dropdown-item nav-link' do
                  = glyph 'cog'
                  Your Account
                = link_to destroy_user_session_path, :method => :delete, class: 'dropdown-item nav-link' do
                  = glyph 'sign-out'
                  Sign Out
              - else
                = link_to new_user_session_path, class: 'dropdown-item nav-link' do
                  = glyph 'sign-in'
                  Sign In
                = link_to user_registration_path, :method => :delete, class: 'dropdown-item nav-link' do
                  = glyph 'user-plus'
                  Sign Up
      .row
        .col-lg-12
          = bootstrap_flash
      = yield
